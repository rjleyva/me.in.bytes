{
  "name": "rjleyva-blog",
  "author": "RJ Leyva",
  "description": "RJ Leyva’s blog shares hands-on tips for building with Astro and React, configuring Neovim plugins, and customizing split keyboard setups—perfect for modern web developers and tinkerers.",
  "license": "MIT",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "bunx --bun astro dev",
    "check": "astro check",
    "build": "bunx --bun astro build",
    "preview": "bunx --bun astro preview",
    "format": "bunx --bun prettier --write .",
    "lint": "bunx --bun eslint .",
    "typecheck": "bunx --bun tsc --noEmit",
    "clean": "rm -rf .astro dist",
    "astro": "bunx --bun astro"
  },
  "dependencies": {
    "-": "^0.0.1",
    "@astrojs/check": "^0.9.4",
    "@fontsource-variable/epilogue": "^5.2.6",
    "astro": "^5.10.0",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "^1.10.4",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "prettier": "^3.5.3"
  }
}
