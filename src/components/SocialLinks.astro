---
import type { AstroComponentFactory } from 'astro/runtime/server/index.js';
import InstagramIcon from './icons/InstagramIcon.astro';
import GithubIcon from './icons/GithubIcon.astro';
import LinkedinIcon from './icons/LinkedinIcon.astro';

interface socialLinksProps {
  id: string;
  name: string;
  href: string;
  icon: AstroComponentFactory;
}

const socialLinks: socialLinksProps[] = [
  {
    id: 'github',
    name: 'GitHub',
    href: 'https://github.com/rjleyva',
    icon: GithubIcon
  },
  {
    id: 'linkedin',
    name: 'LinkedIn',
    href: 'https://linkedin.com/in/rjleyva',
    icon: LinkedinIcon
  },
  {
    id: 'instagram',
    name: 'Instagram',
    href: 'https://instagram.com/slammedwigo',
    icon: InstagramIcon
  }
];
---

<div id="social-links" class="socials" aria-label="Social media links">
  <ul class="socials__list">
    {
      socialLinks.map(link => (
        <li class="socials__item">
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={link.name}
            title={link.name}
            class="socials__link"
          >
            <link.icon />
          </a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .social {
    align-items: center;
    display: flex;
  }

  .socials__list {
    align-items: center;
    display: flex;
    gap: 0.5rem;
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .socials__item {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .socials__link {
    box-shadow: none;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.7rem;
    height: 1.7rem;
    outline-offset: 2px;
    transition:
      box-shadow 0.2s ease,
      outline-color 0.2s ease;
  }

  .socials__link:focus {
    outline-color: var(--focus-outline);
  }
</style>
