---
import { createMetadata } from '@/utils/metadata';
import '../styles/tokens.css';

const metadata = createMetadata({
  pageTitle: '404 -Page Not Found',
  pageDescription:
    '404 Page Not Found - Sorry, the page you’re looking for doesn’t exist or has been moved.',
  pageURL: 'https://me-in-bytes.vercel.app/404'
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex" />
    <meta name="description" content={metadata.pageDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={metadata.pageURL} />
    <meta property="og:title" content="404 Page Not Found" />
    <meta
      property="og:description"
      content="Sorry, the page you’re looking for doesn’t exist or has been moved."
    />
    <meta name="prerender-status-code" content="404" />
    <title>{metadata.pageTitle}</title>
    <script is:inline>
      (function () {
        const theme = localStorage.getItem('theme');
        if (theme) {
          document.documentElement.setAttribute('data-theme', theme);
        } else {
          const prefersDark = window.matchMedia(
            '(prefers-color-scheme: dark)'
          ).matches;
          document.documentElement.setAttribute(
            'data-theme',
            prefersDark ? 'dark' : 'light'
          );
        }
      })();
    </script>
  </head>

  <body class="error-page">
    <main
      class="error-page__main"
      role="main"
      aria-labelledby="error-page__title"
    >
      <section
        class="error-page__section"
        role="region"
        aria-labelledby="error-page__title"
      >
        <header class="error-page__header">
          <h1 id="error-page__title" class="error-page__title">404</h1>
          <h2 class="error-page__subtitle">Page Not Found</h2>
        </header>

        <div class="error-page__content">
          <p class="error-page__message">
            Sorry, the page you’re looking for doesn’t exist or has been moved.
          </p>
          <p class="error-page__back">
            <a
              href="/blog"
              class="error-page__link"
              aria-label="Go back to the blog homepage"
            >
              ← Back to Blog
            </a>
          </p>
        </div>
      </section>
    </main>
  </body>
</html>

<style>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html,
  body {
    max-width: 100vw;
    overflow-x: hidden;
    height: 100%;
  }

  body {
    text-rendering: optimizeLegibility;
    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;
    background-color: var(--404-background);
    color: var(--404-text);
    font-family: 'Open Sans', sans-serif;
    line-height: 1.5;
  }

  .error-page {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    text-align: center;
    padding: 2rem;
  }

  .error-page__main {
    max-width: 37.5rem;
    width: 100%;
  }

  .error-page__title {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 10rem;
    line-height: 1;
  }

  .error-page__subtitle {
    font-size: 3rem;
    margin-block: 1rem;
    font-weight: 600;
  }

  .error-page__message {
    color: var(--404-subtext);
    font-family: 'IBM Plex Mono', monospace;
    margin-bottom: 1.5rem;
    font-size: 1rem;
  }

  .error-page__link {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: var(--404-surface);
    color: var(--404-subtext-2);
    text-decoration: none;
    border-radius: 0.25rem;
    transition:
      background-color 0.2s ease,
      color 0.2s ease;
    font-weight: 500;
  }

  .error-page__link:hover,
  .error-page__link:focus {
    background-color: var(--404-overlay);
    outline: none;
  }

  @media (prefers-color-scheme: dark) {
    body {
      background-color: var(--404-background);
      color: var(--404-text);
    }

    .error-page__message {
      color: var(--404-subtext);
    }

    .error-page__link {
      background-color: var(--404-surface);
      color: var(--404-subtext-2);
    }

    .error-page__link:hover,
    .error-page__link:focus {
      background-color: var(--404-overlay);
    }
  }
</style>
